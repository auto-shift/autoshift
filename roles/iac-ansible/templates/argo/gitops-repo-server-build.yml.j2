---
kind: Build
apiVersion: build.openshift.io/v1
metadata:
  name: gitops-repo-sops-{{ build_revision }}
  namespace: {{ gitops_namespace }}
spec:
  nodeSelector: null
  output:
    to:
      kind: DockerImage
      name: >-
        image-registry.openshift-image-registry.svc:5000/{{ gitops_namespace }}/gitops-repo-server-sops:latest
  resources: {}
  triggeredBy:
    - message: Manually triggered
  strategy:
    type: Docker
    dockerStrategy:
      from:
        kind: DockerImage
        name: 'registry.redhat.io/openshift-gitops-1/argocd-rhel8:{{ argocd_image_version }}'
  postCommit: {}
  serviceAccount: builder
  source:
    type: Git
    git:
      uri: '{{ gitops_repo_url }}'
{% if branch_tag != '' %}
      ref: {{ branch_tag }}
{% else %}
      ref: master
{% endif %}
    contextDir: argo-containers/argocd-repo-server-sops
    sourceSecret:
      name: cms-github
